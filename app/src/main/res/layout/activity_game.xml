<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <FrameLayout
        android:id="@+id/card_container"
        android:layout_width="0dp"
        android:layout_height="260dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cardcontainerTwo"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/card_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_backside"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/card_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hjarter_atta"
            android:visibility="gone" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/cardcontainerTwo"
        android:layout_width="0dp"
        android:layout_height="260dp"
        app:layout_constraintLeft_toRightOf="@id/card_container"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/cardbackTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_backside"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/cardfrontTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/hjarter_drottning"
            android:visibility="gone" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/bottomHalf"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_container" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottomHalf"
        android:layout_margin="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/player1TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:gravity="center"
            style="@style/CustomButtonStyle"
            tools:text="P1:13"
            android:layout_weight="1" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="Draw"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:backgroundTint="@color/Red"
            android:textColor="@color/white"
            style="@style/CustomButtonStyle"
            app:rippleColor="@color/cardview_dark_background"
            app:layout_constraintBottom_toBottomOf="parent" />


        <TextView
            android:id="@+id/player2TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            style="@style/CustomButtonStyle"
            android:gravity="center"
            android:textStyle="italic"
            tools:text="P2:20"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>